rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // RSVP collection rules
    match /rsvp/{documentId} {
      // Allow read and write access to RSVP documents
      // Anyone can create, read, update, and delete RSVP entries
      allow read, write: if true;
      
      // Alternative: More restrictive rule for production
      // Only allow if the document email matches the request data email
      // allow read, write: if request.auth != null || 
      //   (resource == null || resource.data.email == request.resource.data.email);
    }
    
    // Fallback rule for other collections (if needed)
    match /{document=**} {
      // Deny all other operations by default for security
      allow read, write: if false;
    }
  }
}
